{
    "type": "object",
    "keys": {
        "id": {
            "type": "uuid",
            "required": true
        },
        "type": {
            "type":"string",
            "default": "quinoa-story",
            "required": true
        },
        "metadata": {
            "type": "object",
            "required": true,
            "keys": {
                "title": {
                    "type": "string",
                    "required": true
                },
                "description": {
                    "type": "string",
                    "required": true
                },
                "authors": {
                    "type": "array",
                    "required": true
                },
                "gistId": {
                    "type": "string",
                    "required": false
                },
                "level": {
                    "type": "number",
                    "default": 1
                }
            }
        },
        "sectionsOrder": {
            "type": "array",
            "required": true
        },
        "sections": {
            "type": "object",
            "required": true,
            "keys": {
                "$each": {
                    "type": "object",
                    "keyType": "uuid",
                    "keys": {
                        "contents": {
                            "type": "object",
                            "required": true
                        },
                        "notes": {
                            "type": "object",
                            "required": true,
                            "keys": {
                                "$each": {
                                    "type": "object",
                                    "keyType": "uuid"
                                }
                            }
                        },
                        "notesOrder": {
                            "type": "array",
                            "required": true
                        }
                    }
                }
            }
        },
        "resources": {
            "type": "object",
            "required": true,
            "keys": {
                "$each": {
                    "type": "object",
                    "keyType": "uuid"
                }
            }
        },
        "contextualizations": {
            "type": "object",
            "required": true,
            "keys": {
                "$each": {
                    "type": "object",
                    "keyType": "uuid"
                }
            }
        },
        "contextualizers": {
            "type": "object",
            "required": true,
            "keys": {
                "$each": {
                    "type": "object",
                    "keyType": "uuid"
                }
            }
        },
        "settings": {
            "type": "object",
            "required": false,
            "keys": {
                "options": {
                    "type": "object",
                    "keys": {
                        "notesPosition": {
                            "type": "string"
                        },
                        "allowDisqusComments": {
                            "type": "string"
                        }
                    }
                },
                "citationStyle": {
                    "type": "string"
                },
                "citationLocale": {
                    "type": "string"
                },
                "css": {
                    "type": "string"
                }
            }
        }
    }
}
