{
  "name": "quinoa-story-player",
  "version": "0.3.44",
  "description": "js module and standalone app for displaying quinoa data stories",
  "main": "build/index.js",
  "scripts": {
    "build": "rm -rf build;mkdir build;babel --plugins lodash src -d build;cp -v -R src/assets build/assets;node build-tasks",
    "lint": "eslint --fix src",
    "comb": "csscomb src",
    "test": "mocha --compilers js:@babel/register -R spec --recursive $(find src -name '*.spec.js')",
    "dev": "start-storybook -p 6007",
    "build-storybook": "build-storybook",
    "git-add-build": "git add build"
  },
  "pre-commit": [
    "lint",
    "build",
    "comb",
    "git-add-build"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medialab/quinoa-story-player.git"
  },
  "author": "m√©dialab SciencesPo",
  "contributors": [
    "Robin de Mourat",
    "Mengying Du",
    "Guillaume Plique",
    "Arnaud Pichon"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/medialab/quinoa-story-player/issues"
  },
  "homepage": "https://github.com/medialab/quinoa-story-player#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "d3-ease": "^1.0.5",
    "lodash": "^4.17.11",
    "quinoa-schemas": "1.1.0",
    "raw-loader": "^0.5.1",
    "react-citeproc": "^0.1.10",
    "react-custom-scrollbars": "^4.0.0",
    "react-measure": "^2.0.2",
    "react-player": "^1.6.4",
    "react-table": "^6.5.1",
    "react-tooltip": "^3.6.1",
    "redraft": "^0.10.0"
  },
  "peerDependencies": {
    "react": "^16.7.0-alpha",
    "react-dom": "^16.7.0-alpha"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-proposal-decorators": "^7.2.0",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@storybook/react": "^4.0.12",
    "@yomguithereal/eslint-config": "^4.0.0",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-lodash": "^3.3.4",
    "chai": "^4.1.0",
    "copy": "^0.3.2",
    "css-loader": "^0.28.11",
    "csscomb": "^4.0.1",
    "eslint": "^4.3.0",
    "eslint-plugin-react": "^7.1.0",
    "file-loader": "^1.1.6",
    "image-webpack-loader": "^4.6.0",
    "mocha": "^5.0.1",
    "node-sass": "^4.9.3",
    "pre-commit": "^1.1.3",
    "react": "^16.7.0-alpha",
    "react-dom": "^16.7.0-alpha",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "url-loader": "^1.1.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "@yomguithereal/eslint-config/es7",
      "@yomguithereal/eslint-config/react"
    ],
    "rules": {
      "react/no-set-state": 0,
      "react/forbid-prop-types": 0,
      "react/jsx-no-bind": 0,
      "react/jsx-indent": [
        2,
        2
      ],
      "react/jsx-indent-props": [
        2,
        2
      ],
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ]
    }
  }
}
