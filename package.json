{
  "name": "quinoa-story-player",
  "version": "0.2.1",
  "description": "js module and standalone app for displaying quinoa data stories",
  "main": "build/index.js",
  "scripts": {
    "build": "rm -rf build && gulp build",
    "lint": "eslint --fix src",
    "comb": "csscomb src",
    "test": "mocha --compilers js:babel-core/register -R spec --recursive $(find src -name '*.spec.js')",
    "storybook": "start-storybook -p 6007",
    "build-storybook": "build-storybook",
    "git-add-build": "git add build"
  },
  "pre-commit": [
    "lint",
    "build",
    "comb",
    "git-add-build"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medialab/quinoa-story-player.git"
  },
  "author": "Robin de Mourat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/medialab/quinoa-story-player/issues"
  },
  "homepage": "https://github.com/medialab/quinoa-story-player#readme",
  "dependencies": {
    "quinoa-presentation-player": "^0.2.0",
    "raw-loader": "^0.5.1",
    "react": "^15.3.2",
    "react-citeproc": "^0.1.0",
    "react-custom-scrollbars": "^4.0.0",
    "react-disqus-comments": "^1.0.3",
    "react-dom": "^15.3.2",
    "react-markdown": "^2.4.2",
    "react-media-player": "^0.6.1",
    "react-table": "^6.5.1",
    "rebound": "0.0.15",
    "redraft": "^0.8.0"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.21.0",
    "@yomguithereal/eslint-config": "^4.0.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-decorators": "^6.13.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "chai": "^4.1.0",
    "css-loader": "^0.28.0",
    "csscomb": "^4.0.1",
    "eslint": "^4.3.0",
    "eslint-plugin-react": "^7.1.0",
    "file-loader": "^0.11.1",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-strip-comments": "^2.4.3",
    "image-webpack-loader": "^3.2.0",
    "mocha": "^3.1.0",
    "node-sass": "^4.5.2",
    "pre-commit": "^1.1.3",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.18.2"
  },
  "babel": {
    "plugins": [
      "transform-decorators-legacy",
      "transform-decorators",
      "transform-object-rest-spread",
      "transform-runtime",
      "transform-class-properties"
    ],
    "presets": [
      "es2015",
      "react"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "@yomguithereal/eslint-config/es7",
      "@yomguithereal/eslint-config/react"
    ],
    "rules": {
      "react/no-set-state": 0,
      "react/forbid-prop-types": 0
    }
  }
}
