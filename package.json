{
  "name": "quinoa-story-player",
  "version": "0.2.35",
  "description": "js module and standalone app for displaying quinoa data stories",
  "main": "build/index.js",
  "scripts": {
    "build": "rm -rf build && gulp build",
    "lint": "eslint --fix src",
    "comb": "csscomb src",
    "test": "mocha --compilers js:babel-core/register -R spec --recursive $(find src -name '*.spec.js')",
    "storybook": "start-storybook -p 6007",
    "build-storybook": "build-storybook",
    "git-add-build": "git add build"
  },
  "pre-commit": [
    "lint",
    "build",
    "comb",
    "git-add-build"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medialab/quinoa-story-player.git"
  },
  "author": "Robin de Mourat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/medialab/quinoa-story-player/issues"
  },
  "homepage": "https://github.com/medialab/quinoa-story-player#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "raw-loader": "^0.5.1",
    "react": "^16.2.0",
    "react-citeproc": "^0.1.0",
    "react-custom-scrollbars": "^4.0.0",
    "react-dom": "^16.2.0",
    "react-markdown": "^3.2.0",
    "react-measure": "^2.0.2",
    "react-player": "^1.6.4",
    "react-table": "^6.5.1",
    "react-tooltip": "^3.6.1",
    "rebound": "0.1.0",
    "redraft": "^0.10.0"
  },
  "devDependencies": {
    "@storybook/react": "3.3.14",
    "@yomguithereal/eslint-config": "^4.0.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-decorators": "^6.13.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "chai": "^4.1.0",
    "css-loader": "^0.28.0",
    "csscomb": "^4.0.1",
    "eslint": "^4.3.0",
    "eslint-plugin-react": "^7.1.0",
    "file-loader": "^1.1.6",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.1",
    "gulp-strip-comments": "^2.4.3",
    "image-webpack-loader": "^4.3.1",
    "mocha": "^5.0.1",
    "node-sass": "^4.9.3",
    "pre-commit": "^1.1.3",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.20.2"
  },
  "babel": {
    "plugins": [
      "transform-decorators-legacy",
      "transform-decorators",
      "transform-object-rest-spread",
      "transform-runtime",
      "transform-class-properties",
      "transform-export-extensions"
    ],
    "presets": [
      "es2015",
      "react"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "@yomguithereal/eslint-config/es7",
      "@yomguithereal/eslint-config/react"
    ],
    "rules": {
      "react/no-set-state": 0,
      "react/forbid-prop-types": 0,
      "react/jsx-no-bind": 0,
      "react/jsx-indent": [
        2,
        2
      ],
      "react/jsx-indent-props": [
        2,
        2
      ],
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ]
    }
  }
}
